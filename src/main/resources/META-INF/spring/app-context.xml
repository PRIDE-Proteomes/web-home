<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- property files -->
    <context:property-placeholder location="classpath:META-INF/props/solr.properties" ignore-unresolvable="true"/>


    <bean id="solrServer" class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg name="baseURL" value="${proteomes.solr.server.url}" />
    </bean>

    <bean id="proteinSearchDao" class="uk.ac.ebi.pride.proteomes.search.protein.dao.solr.ProteinSearchDaoSolr">
        <constructor-arg name="server" ref="solrServer" />
    </bean>

</beans>