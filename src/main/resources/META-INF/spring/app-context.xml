<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:solr="http://www.springframework.org/schema/data/solr"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/data/solr http://www.springframework.org/schema/data/solr/spring-solr-1.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- scan for Solr based services -->
    <context:component-scan base-package="uk.ac.ebi.pride.proteomes.index.service"/>
    <!-- scan for Solr repositories -->
    <solr:repositories base-package="uk.ac.ebi.pride.proteomes.index.repository"/>

    <bean id="proteomesSolrServer" class="org.apache.solr.client.solrj.impl.HttpSolrClient">
        <constructor-arg name="baseURL" value="${solr.server.proteomes.peptiform.core.url}" />
    </bean>

    <bean id="solrTemplate" class="org.springframework.data.solr.core.SolrTemplate">
        <constructor-arg name="solrClient" ref="proteomesSolrServer"/>
    </bean>

    <!-- Set up or detect a System property called "INDEX_ENVIRONMENT" used to construct a properties file on the classpath.  The default is "dev".  -->
    <bean id="indexEnvironment"
          class="org.springframework.batch.support.SystemPropertyInitializer">
        <property name="defaultValue" value="dev"/>
        <property name="keyName" value="INDEX_ENVIRONMENT"/>
    </bean>

    <bean id="indexPlaceholderProperties" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer" depends-on="indexEnvironment">
        <property name="location" value="classpath:META-INF/prop/solr/pride-proteomes-solr-${INDEX_ENVIRONMENT}.properties"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="order" value="1"/>
    </bean>

</beans>